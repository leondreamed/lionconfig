{
	"name": "@lionconfig/monorepo",
	"scripts": {
		"release": "pnpm --filter=lionconfig run release",
		"build": "pnpm --filter=lionconfig run build",
		"test": "pnpm --filter=lionconfig run test",
		"lint": "pnpm recursive run lint",
		"typecheck": "pnpm recursive run typecheck"
	},
	"lionconfig": {
		"noPrepare": true
	},
	"pnpm": {
		"updateConfig": {
			"ignoreDependencies": [
				"@commonjs/*"
			]
		},
		"peerDependencyRules":  {
			"ignoreMissing": [
				"@yarnpkg/core",
				"webpack"
			]
		}
	}
}
