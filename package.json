{
	"name": "@lionconfig/monorepo",
	"scripts": {
		"release": "pnpm --filter=lionconfig run release",
		"build": "pnpm --filter=lionconfig run build",
		"test": "pnpm --filter=lionconfig run test",
		"lint": "pnpm turbo lint --continue",
		"typecheck": "pnpm turbo typecheck --continue"
	},
	"lionconfig": {
		"noPrepare": true
	},
	"pnpm": {
		"updateConfig": {
			"ignoreDependencies": [
				"@commonjs/*"
			]
		},
		"peerDependencyRules": {
			"ignoreMissing": [
				"@yarnpkg/core",
				"webpack"
			]
		}
	},
	"devDependencies": {
		"turbo": "^1.6.2"
	}
}
